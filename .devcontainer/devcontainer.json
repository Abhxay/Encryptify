{
  "name": "Encryptify Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:0-21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8"
    }
  },
  "postCreateCommand": "cd frontend && npm install && npm run build || true",
  "forwardPorts": [8089, 3000, 3306],
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
