{
  "name": "Encryptify Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:0-21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8"
    }
  },
  "postCreateCommand": "cd frontend && npm install && npm run build || true",
  "forwardPorts": [8089, 3000, 3306],
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode", 
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "remoteUser": "vscode",
  "portsAttributes": {
    "8089": {
      "label": "Spring Boot Backend",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "React Frontend",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL",
      "onAutoForward": "notify"
    }
  },
  "workspaceFolder": "/workspaces/encryptify",
  "containerEnv": {
    "SPRING_DATASOURCE_URL": "jdbc:mysql://localhost:3306/encryptify?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC",
    "SPRING_DATASOURCE_USERNAME": "root",
    "SPRING_DATASOURCE_PASSWORD": "Abhay23"
  }
}
